// prisma/schema.prisma

generator client {
  provider = "prisma-client-js" // 必ずこれにする
}

datasource db {
  provider = "postgresql"
   url       = env("PRISMA_DATABASE_URL") // 変数名だけを書く
  directUrl = env("POSTGRES_URL")    
}

model Menu {
  id        Int      @id @default(autoincrement())  // ← @default(autoincrement()) が必須！
  name      String
  category    String
  price       Int      @default(0)
}