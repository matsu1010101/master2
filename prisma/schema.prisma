// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // ここに直接書く！
}

model Menu {
  id        Int      @id @default(autoincrement())  // ← @default(autoincrement()) が必須！
  name      String
  category    String
  price       Int      @default(0)
}